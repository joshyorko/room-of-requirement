{
  "name": "The Room of Requirement",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {},
    "ghcr.io/devcontainers/features/common-utils:2.5.4": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": "true"   // Upgrade all system packages during container build for latest security and features
    }
  },
  "runArgs": [
    "--privileged"
  ],
  "remoteUser": "vscode",
  "postCreateCommand": "curl -s https://raw.githubusercontent.com/k3d-io/k3d/main/install.sh | bash; set -e && curl -sS https://webinstall.dev/k9s | sh && curl -LsSf https://astral.sh/uv/install.sh | sh;curl https://install.duckdb.org | sh;rcc config identity -t",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-azuretools.vscode-containers",
        "sema4ai.sema4ai",
        "github.vscode-github-actions",
        "ms-vscode.vscode-websearchforcopilot",
        "GitHub.vscode-pull-request-github",
        "ms-python.python"
      ]
    }
  }
}
