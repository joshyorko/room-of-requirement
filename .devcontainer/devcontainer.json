{
  "name": "The Room of Requirement",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {},
    "ghcr.io/devcontainers/features/common-utils:2.5.4": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/aws-cli:1.1.2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1.2.2": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },
    "ghcr.io/devcontainers/features/github-cli:1.0.15": {
      "version": "latest"
    }
  },
  "runArgs": [
    "--privileged"
  ],
  "remoteUser": "vscode",
  "postCreateCommand": "rcc config identity -t",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "mcp": {

      },
      "extensions": [
        "ms-azuretools.vscode-containers",
        "github.vscode-github-actions",
        "ms-vscode.vscode-websearchforcopilot",
        "GitHub.vscode-pull-request-github",
        "ms-python.python"
      ]
    }
  }
}
