{
  "name": "The Room of Requirement",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {
      "version": "latest",
      "moby": true
    },
    "ghcr.io/devcontainers/features/common-utils:2.5.4": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/aws-cli:1.1.2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1.2.2": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    }
  },
  // Workspace configuration per DevContainer spec
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "containerUser": "vscode",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "containerEnv": {
    "UV_CACHE_DIR": "/home/vscode/.cache/uv"
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  // Lifecycle scripts - verify tools are available before running commands
  "postCreateCommand": "./scripts/post-create.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-azuretools.vscode-containers",
        "github.vscode-github-actions",
        "ms-vscode.vscode-websearchforcopilot",
        "GitHub.vscode-pull-request-github",
        "ms-python.python"
      ]
    }
  },
  // Additional DevContainer spec properties
  "mounts": [
    // Docker socket is already mounted by docker-in-docker feature
    "source=room-of-requirement-uv-cache,target=/home/vscode/.cache/uv,type=volume"
  ],
  // Override image command to prevent exit
  "overrideCommand": false
}
